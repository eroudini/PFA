
{% block contact %}

	{{ form_start(form) }}
	<br>
		
				<div class="form-group">
					<label for="inputNom">Nom</label>
					{{form_widget(form.Nom, {
            			'attr': {
            			'class': 'form-control',
						'style': 'width: 15rem'
             			}
        				})}}


					<div>
						<div class="form-group">
							<label for="inputMail">Mail</label>
							{{form_widget(form.Mail, {
            			'attr': {
            			'class': 'form-control',
						'style': 'width: 15rem'
             }
        			})}}

							<div>
								<div class="form-group">
									<label for="inputObjet">Objet</label>
									{{form_widget(form.Objet, {
            			'attr': {
            			'class': 'form-control',
						'style': 'width: 15rem'
             }
        })}}
			

									<div>
										<div class="form-group">
											<label for="inputMessage">Message</label>

											{{form_widget(form.Message, {
            			'attr': {
            			'class': 'form-control',
            			'style': 'width: 15rem'
            }
        })}}
										</div>
									</div>
								</div>

								<button class="btn">{{ button_label|default('Envoyer') }}</button>
							</div>


	
							{{ form_end(form) }}
{% endblock %}
