{% extends 'base.html.twig' %}

{% block title %}{{product.nomproduit}}{% endblock %}

{% block body %}

 	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-4">					
						<div class="preview-pic tab-content">
						  <div class="tab-pane active"><img src="{{product.images}}" /></div>
						</div>
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{product.nomproduit}}</h3>
						<h4 class="price">Prix: <span>{{product.prix}}</span></h4>
						<p class="product-description">{{product.description}}</p>
						<div class="action">
							<button class="add-to-cart btn btn-default" onclick="window.location.href='{{ path('app_checkout') }}'" type="button">Acheter</button>

							<button
							 class="like btn btn-default" onclick="window.location.href='{{ path('app_product_add_cart', {id: product.id}) }}'"><i class="fa-solid fa-cart-shopping"></i>
							</button>		
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

    {# PRODUITS ADDITIONNELS #}

{% endblock %}
