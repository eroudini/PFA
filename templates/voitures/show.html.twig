{% extends 'base.html.twig' %}

{% block title %}{{voiture.nom}}{% endblock %}

{% block body %}

<!-- Partie images -->

<section class="py-5">
  <div class="container">
    <div class="row gx-5">
      <aside class="col-lg-6">
        <div class="border rounded-4 mb-3 d-flex justify-content-center">
          <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="{{ voiture.images }}">
            <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="{{ voiture.images }}" />
          </a>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="{{ voiture.images }}" class="item-thumb">
            <img width="60" height="60" class="rounded-2" src="{{ voiture.images }}" />
          </a>
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="{{ voiture.images }}" class="item-thumb">
            <img width="60" height="60" class="rounded-2" src="{{ voiture.images }}" />
          </a>
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="{{ voiture.images }}" class="item-thumb">
            <img width="60" height="60" class="rounded-2" src="{{ voiture.images }}" />
          </a>
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="{{ voiture.images }}" class="item-thumb">
            <img width="60" height="60" class="rounded-2" src="{{ voiture.images }}" />
          </a>
          <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="{{ voiture.images }}" class="item-thumb">
            <img width="60" height="60" class="rounded-2" src="{{ voiture.images }}" />
          </a>
        </div>

      </aside>
      <main class="col-lg-6">
        <div class="ps-lg-3">
          <h4 class="title text-dark">
            {{ voiture.nom }}
          </h4>
          <div class="d-flex flex-row my-3">
            <span class="text-success ms-2">En stock</span>
          </div>

          <div class="mb-3">
            <span class="h5">{{voiture.prix}}</span>
          </div>

          {# <p>
            {{ voiture.descriptions}}
          </p> #}

          <div class="row">
            <dt class="col-3">Km</dt>
            <dd class="col-9">{{ voiture.kilometrage }}</dd>

            <dt class="col-3">Circulation</dt>
            <dd class="col-9">{{ voiture.circulation }}</dd>

            <dt class="col-3">Carburant</dt>
            <dd class="col-9">{{ voiture.carburant }}</dd>
          </div>

          <hr/>
          <div class="deuxbtn"> 
          <button type="button" class="btn3 py-2 icon-hover px-5" data-bs-toggle="modal" data-bs-target="#contactclients">
            Être rappelé(e)
          </button>
          <br>
          <div class="ou">Ou</div> 
          <button type="button" class="btn2 py-2 icon-hover px-5" title="ouverture fenêtre de conversation"><a href="mailto:contact@horizoncar.com?Subject=Demande d'informations'&body=Nous souhaitons prendre contact avec vous afin que vous nous présentiez vos services..."> <i class="fa-solid fa-envelope"></i> Enovyez un mail </a></button>   
          {# <a href="mailto:contact@horizoncar.com?Subject=Demande d'informations'&body=Nous souhaitons prendre contact avec vous afin que vous nous présentiez vos services..." class="btn2 py-2 icon-hover px-5" title="ouverture fenêtre de conversation"> <i class="fa-solid fa-envelope"></i> Enovyez un mail</a>  #}
          </div>

        </div>
      </main>
    </div>
  </div>
</section>

<section class="bg-light border-top py-4">
  <div class="container">
    <div class="row gx-4">
        <div class="col-lg-8 mb-4">
            <div class="border rounded-2 px-3 py-2 bg-white">
          <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">           
              <a class="nav-link d-flex align-items-center justify-content-center w-50 active">A propos de ce véhicule</a>          
          </ul>
          <hr>

            <div class="tab-content" id="ex1-content">
                <div class="tab-pane fade show active" id="ex1-pills-1" role="tabpanel" aria-labelledby="ex1-tab-1">
                <p>
                    {{voiture.descriptions}}
                </p>

                <hr>
                <div class="row mb-2">
                        <div class="col-12 col-md-6">
                  <ul class="list-unstyled mb-0">
                    <li><i class="fas fa-check text-success me-2"></i>Caméra de recul</li>
                    <li><i class="fas fa-check text-success me-2"></i>Bluetooth</li>
                    <li><i class="fas fa-check text-success me-2"></i>Radar de recul</li>
                    <li><i class="fas fa-check text-success me-2"></i>Clim automatique</li>
                  </ul>
                        </div>
                    <div class="col-12 col-md-6 mb-0">
                  <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Feux LED</li>
                    <li><i class="fas fa-check text-success me-2"></i>GPS</li>
                    <li><i class="fas fa-check text-success me-2"></i>Régulateur de vitesse</li>
                  </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>       
    </div>        
</section>

<!-- Modal -->
<div class="modal fade" id="contactclients" tabindex="-1" role="dialog" aria-labelledby="annModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header text-center">
				<h4 class="modal-title w-100 font-weight-bold">Vous souhaitez voir cette <strong><span>{{voiture.nom}}</span></strong> en point de vente ?</h4>
				{# <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button> #}
			</div>
              <p>HorizonCar vous contactera dans un délai maximum de 24 heures.</p>

      {{ form_start(form) }}
			 <div class="modal-body mx-3">
      
       <div class="md-form mb-5">
					<i class="fas fa-user prefix grey-text"></i>
          <label data-error="wrong" data-success="right" for="form3">Votre nom</label>
        {{form_widget(form.Nom, {
            'attr': {
            'class': 'form-control'
             }
        })}}
				</div>

				<div class="md-form mb-5">
					<i class="fa-solid fa-envelope"></i>
          <label data-error="wrong" data-success="right" for="form3">Mail</label>
        {{form_widget(form.Mail, {
            'attr': {
            'class': 'form-control'
             }
        })}}
				</div>
        
				<div class="md-form mb-4">
					<i class="fa-solid fa-phone"></i>
           <label data-error="wrong" data-success="right" for="form2">Tel</label>
        {{form_widget(form.Tel, {
            'attr': {
            'class': 'form-control'
             }
        })}}
				</div>

			</div>
			<div class="modal-footer d-flex justify-content-center">
				<button class="btn btn-indigo">{{ button_label|default('Être rappelé(e)') }}
				</button>
			</div> 
      {{ form_end(form) }}

     
		</div>
	</div>
</div>
{% endblock %}
