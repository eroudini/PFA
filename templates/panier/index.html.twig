{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Votre panier</h1>
    
    {% if items | length > 0 %} 
    <table>
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
             {% for item in items %} 
             <tr>
                <td>{{produit.nomproduit}}</td>
                <td>{{produit.prix}}</td>
                <td>{{quantite}}</td>
                <td>{{produit.prix * produit.quantite}}</td>
                <td></td>
            </tr>

             {% endfor %} 
        </tbody>
    </table>   
    {% else %}
        <p>Votre panier est vide</p>
    
    {% endif %}
    
   
</div>
{% endblock %}
